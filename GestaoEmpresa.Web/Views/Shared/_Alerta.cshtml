<!-- Modal Sucess -->
<div id="myModalSucess" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Mensagem</h4>
            </div>
            <div class="modal-body">
                <div class="alert alert-success" role="alert">
                    <p><strong>Successo!</strong> @Html.Raw((string)ViewBag.Sucesso)</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Erro -->
<div id="myModalErro" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Mensagem</h4>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger" role="alert">
                    <p><strong>Erro!</strong> @Html.Raw((string)ViewBag.Erro)</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
<!-- Modal Default -->
<div id="myModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Aviso!</h4>
            </div>
            <div class="modal-body">
                <div class="alert alert-light" role="alert">
                    <p><strong>Erro!</strong> @Html.Raw((string)ViewBag.Message)</p>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>


<script>

        $(function ()
        {
            @if (!string.IsNullOrWhiteSpace((string)ViewBag.Message))
            {
                @: $('#myModal').modal()
            }
            @if (!string.IsNullOrWhiteSpace((string)ViewBag.Sucesso))
            {
                @: $('#myModalSucess').modal()
            }
            @if (!string.IsNullOrWhiteSpace((string)ViewBag.Erro))
            {
                @: $('#myModalErro').modal()
            }
        })


</script>